{
  "name": "visu",
  "author": {
    "name": "j-o-d-o",
    "email": "jdobler@protonmail.com"
  },
  "version": "1.0.0",
  "description": "visu for driving",
  "main": "app/src/main.js",
  "homepage": "http://hompage.com",
  "license": "ISC",
  "scripts": {
    "build-sass": "sass --load-path node_modules --load-path src src/index.scss app/src/index.css --style compressed",
    "gen-capnp": "capnpc -o ts src/com/frame.capnp",
    "start": "npm run gen-capnp && npm run build-sass && ./node_modules/typescript/bin/tsc && electron ./app/src/main.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "pack-win": "electron-builder --dir --win",
    "dist-win": "electron-builder --win",
    "postinstall": "rm -rf node_modules/@types/react-native && electron-builder install-app-deps"
  },
  "build": {
    "appId": "visu.id",
    "extraFiles": {
      "from": "./assets",
      "to": "./dist"
    },
    "linux": {
      "icon": "assets/logo.png",
      "target": [
        "AppImage",
        "deb"
      ]
    },
    "win": {
      "target": [
        "zip"
      ]
    }
  },
  "dependencies": {
    "babylonjs": "^4.2.0",
    "babylonjs-gui": "^4.2.0",
    "babylonjs-materials": "^4.2.0",
    "capnp-ts": "^0.7.0",
    "capnpc-ts": "^0.7.0",
    "electron-devtools-installer": "^3.2.0",
    "fast-png": "^5.0.4",
    "node-ipc": "^9.2.1",
    "react": "^16.14.0",
    "react-dom": "^16.14.0",
    "react-redux": "^7.2.4",
    "redux": "^4.1.1",
    "rmwc": "^6.1.4",
    "styled-components": "^5.3.1"
  },
  "devDependencies": {
    "@types/electron-devtools-installer": "^2.2.0",
    "@types/node-ipc": "^9.1.5",
    "@types/react": "^16.14.14",
    "@types/react-dom": "^16.9.14",
    "@types/react-redux": "^7.1.18",
    "@types/styled-components": "5.1.13",
    "@types/node": "14.14.10",
    "electron": "^14.2.4",
    "electron-builder": "^22.11.7",
    "electron-devtools-installer": "^3.2.0",
    "sass": "^1.39.0",
    "typescript": "^4.0.2"
  }
}
