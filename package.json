{
  "name": "visu",
  "author": {
    "name": "j-o-d-o",
    "email": "jdobler@protonmail.com"
  },
  "version": "1.0.0",
  "description": "visu for driving",
  "main": "app/src/main.js",
  "homepage": "http://hompage.com",
  "license": "ISC",
  "scripts": {
    "clean": "del-cli app",
    "copy-files": "copyfiles -V ./src/**/*.html ./app ./assets/*.woff2 ./app",
    "build-sass": "sass --load-path node_modules --load-path src src/index.scss app/src/index.css --style compressed",
    "gen-proto": "protoc --plugin=./node_modules/.bin/protoc-gen-ts_proto --ts_proto_opt=esModuleInterop=true --ts_proto_out=./src/com/interface/proto -I=./src/com/interface/proto ./src/com/interface/proto/*.proto",
    "start": "npm run copy-files && npm run gen-proto && npm run build-sass && ./node_modules/typescript/bin/tsc && electron ./app/src/main.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "pack-win": "electron-builder --dir --win",
    "dist-win": "electron-builder --win",
    "postinstall": "rm -rf node_modules/@types/react-native && electron-builder install-app-deps"
  },
  "build": {
    "appId": "visu.id",
    "extraFiles": {
      "from": "./assets",
      "to": "./dist"
    },
    "linux": {
      "icon": "assets/logo.png",
      "target": [
        "AppImage",
        "deb"
      ]
    },
    "win": {
      "target": [
        "zip"
      ]
    }
  },
  "dependencies": {
    "@electron/remote": "^2.0.8",
    "@material/button": "^14.0.0",
    "@material/fab": "^14.0.0",
    "@material/menu": "^14.0.0",
    "@material/tab": "^14.0.0",
    "@material/tab-bar": "^14.0.0",
    "@material/theme": "^14.0.0",
    "@reduxjs/toolkit": "^1.8.5",
    "babylonjs": "5.24.0",
    "babylonjs-gui": "5.24.0",
    "babylonjs-materials": "5.24.0",
    "classnames": "^2.3.2",
    "electron-devtools-installer": "3.2.0",
    "fast-png": "6.1.0",
    "nodejs-ecal": "1.1.1",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-redux": "8.0.2",
    "react-router-dom": "^6.4.1",
    "redux": "4.2.0",
    "styled-components": "5.3.5",
    "ts-proto": "^1.125.0"
  },
  "devDependencies": {
    "@types/electron-devtools-installer": "2.2.2",
    "@types/node": "16.11.59",
    "@types/react": "18.0.20",
    "@types/react-dom": "18.0.6",
    "@types/react-redux": "7.1.24",
    "@types/styled-components": "5.1.26",
    "copyfiles": "^2.4.1",
    "del-cli": "^5.0.0",
    "electron": "20.1.4",
    "electron-builder": "23.3.3",
    "electron-devtools-installer": "3.2.0",
    "sass": "^1.41.1",
    "typescript": "~4.6.4"
  }
}
