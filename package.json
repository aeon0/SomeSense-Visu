{
  "name": "visu",
  "author": {
    "name": "j-o-d-o",
    "email": "jdobler@protonmail.com"
  },
  "version": "1.0.0",
  "description": "visu for driving",
  "main": "app/src/main.js",
  "homepage": "http://hompage.com",
  "license": "ISC",
  "scripts": {
    "build-sass": "node-sass --include-path node_modules --include-path src src/index.scss app/src/index.css --output-style compressed",
    "gen-capnp": "capnp compile -o node_modules/.bin/capnpc-ts src/com/frame_v1.capnp",
    "start": "npm run gen-capnp && npm run build-sass && ./node_modules/typescript/bin/tsc && electron ./app/src/main.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "pack-win": "electron-builder --dir --win",
    "dist-win": "electron-builder --win",
    "postinstall": "rm -rf node_modules/@types/react-native && electron-builder install-app-deps && bash capnp-ts-fixes/replace_files.sh"
  },
  "build": {
    "appId": "visu.id",
    "extraFiles": {
      "from": "./assets",
      "to": "./dist"
    },
    "linux": {
      "icon": "assets/logo.png",
      "target": [
        "AppImage",
        "deb"
      ]
    },
    "win": {
      "target": [
        "zip"
      ]
    }
  },
  "dependencies": {
    "@types/classnames": "^2.2.11",
    "babylonjs": "^4.2.0",
    "babylonjs-gui": "^4.2.0",
    "babylonjs-materials": "^4.2.0",
    "capnpc-ts": "^0.4.0",
    "electron-devtools-installer": "^3.0.0",
    "fast-png": "^5.0.2",
    "node-ipc": "^9.1.1",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-redux": "^7.2.0",
    "redux": "^4.0.5",
    "rmwc": "^5.7.2",
    "styled-components": "^5.2.1"
  },
  "devDependencies": {
    "@types/electron-devtools-installer": "^2.2.0",
    "@types/node-ipc": "^9.1.2",
    "@types/react": "^16.9.34",
    "@types/react-dom": "^16.9.6",
    "@types/react-redux": "^7.1.7",
    "@types/styled-components": "5.1.4",
    "@types/node": "12.12.6",
    "electron": "^8.2.3",
    "electron-builder": "^22.5.1",
    "electron-devtools-installer": "^3.0.0",
    "node-sass": "^4.13.1",
    "typescript": "^4.0.2"
  }
}
