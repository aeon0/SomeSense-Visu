{
  "name": "visu",
  "author": {
    "name": "j-o-d-o",
    "email": "jdobler@protonmail.com"
  },
  "version": "1.0.0",
  "description": "visu for driving",
  "main": "app/src/main.js",
  "homepage": "http://hompage.com",
  "license": "ISC",
  "scripts": {
    "b": "./node_modules/typescript/bin/tsc && electron ./app/src/main.js",
    "build-sass": "sass --load-path node_modules --load-path src src/index.scss app/src/index.css --style compressed",
    "gen-capnp": "capnpc -o ts src/com/frame.capnp",
    "start": "npm run gen-capnp && npm run build-sass && ./node_modules/typescript/bin/tsc && electron ./app/src/main.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "pack-win": "electron-builder --dir --win",
    "dist-win": "electron-builder --win",
    "postinstall": "rm -rf node_modules/@types/react-native && electron-builder install-app-deps",
    "electron": "ELECTRON_DISABLE_SECURITY_WARNINGS=true electron ."
  },
  "build": {
    "appId": "visu.id",
    "extraFiles": {
      "from": "./assets",
      "to": "./dist"
    },
    "linux": {
      "icon": "assets/logo.png",
      "target": [
        "AppImage",
        "deb"
      ]
    },
    "win": {
      "target": [
        "zip"
      ]
    }
  },
  "dependencies": {
    "@reduxjs/toolkit": "^1.8.5",
    "babylonjs": "5.24.0",
    "babylonjs-gui": "5.24.0",
    "babylonjs-materials": "5.24.0",
    "capnp-ts": "0.7.0",
    "capnpc-ts": "0.7.0",
    "electron-devtools-installer": "3.2.0",
    "fast-png": "6.1.0",
    "nodejs-ecal": "1.0.4",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-redux": "8.0.2",
    "redux": "4.2.0",
    "rmwc": "8.0.1",
    "styled-components": "5.3.5"
  },
  "devDependencies": {
    "@types/electron-devtools-installer": "2.2.2",
    "@types/node": "16.11.59",
    "@types/react": "17.0.50",
    "@types/react-dom": "17.0.17",
    "@types/react-redux": "7.1.24",
    "@types/styled-components": "5.1.13",
    "electron": "20.1.4",
    "electron-builder": "23.3.3",
    "electron-devtools-installer": "3.2.0",
    "sass": "1.54.9",
    "typescript": "~4.6.4"
  }
}
